\mode<presentation>

% IBM Color Palette
\definecolor{ibmblack}{RGB}{0,0,0}
\definecolor{ibmblue}{RGB}{15,111,255}
\definecolor{ibmteal}{RGB}{32,213,210}
\definecolor{ibmgray}{RGB}{143,139,139}
\definecolor{ibmlightgray}{RGB}{234,234,234}
\definecolor{ibmdarkblue}{RGB}{0,54,135}
\definecolor{ibmdarkteal}{RGB}{16,106,105}

% Colors
% Title slide
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}
\setbeamercolor*{footline}{fg=ibmblack}
% Regular slide
\setbeamercolor*{background canvas}{bg=white}
\setbeamercolor*{frametitle}{fg=black}
\setbeamercolor*{itemize item}{fg=black}

% Hyperlinks colours
\hypersetup{colorlinks,linkcolor=ibmteal,urlcolor=ibmdarkblue}

% Fonts
\setsansfont{IBMPlexSans}
\setmonofont{IBMPlexMono}
\setbeamerfont{title}{size=\fontsize{14}{14}\selectfont}
\setbeamerfont{author}{size=\fontsize{8}{8}\selectfont}
\setbeamerfont{caption}{size=\scriptsize}

\mode
<all>
