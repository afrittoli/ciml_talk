\mode<presentation>

% Title page
\defbeamertemplate*{title page}{ibmcloud}[1][]
{
  \begin{textblock*}{\paperwidth}(0.32cm,0.34cm)
    \begin{beamercolorbox}[wd=0.50\paperwidth]{title page header}
      \usebeamerfont{title}\Huge\inserttitle\par---\par%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=0.70\paperwidth]{title page header}
      \usebeamerfont{author}\LARGE\insertauthor\Huge\par---\par%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=0.60\paperwidth]{title page header}
      \usebeamerfont{author}\LARGE\insertinstitute\par%
    \end{beamercolorbox}%
    \vfill
  \end{textblock*}
}

\@namedef{ps@navigation@titlepage}{%
  \setbeamertemplate{footline}{%
    \parbox{0.9\linewidth}{\vspace*{-20pt}\hspace*{10pt}\insertdate }%
    \parbox{0.1\linewidth}{\vspace*{-20pt}\hspace*{70pt}}%
  }
  \setbeamertemplate{background}{
    \includegraphics[width=\paperwidth,height=\paperheight]{img/odsc_title_background.png}
  }
  \setbeamercolor*{footline}{fg=white}
  \@nameuse{ps@navigation}}
\addtobeamertemplate{title page}{\thispagestyle{navigation@titlepage}}{}

% Section page
\defbeamertemplate*{section page}{ibmcloud}[1][]
{
  \begin{textblock*}{\paperwidth}(0.32cm,0.34cm)
    \begin{beamercolorbox}[wd=0.5\paperwidth]{title page header}
      \usebeamerfont{title}\Huge---\par%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=0.35\paperwidth]{section page header}
      \usebeamerfont{section name}\Huge\insertsection%
    \end{beamercolorbox}%
    \vfill
  \end{textblock*}%
}

\@namedef{ps@navigation@sectionpage}{%
  \setbeamertemplate{background canvas}{%
    \begin{tikzpicture}[remember picture,overlay]
      \node [rectangle, left color=sectiondarkblue, right color=sectionlightblue, anchor=north, minimum width=\paperwidth, minimum height=\paperheight] (box) at (current page.north){};
    \end{tikzpicture}%
  }
  \setbeamercolor*{footline}{fg=white}
  \setbeamercolor*{section name}{fg=white}
  \setbeamercolor*{section title}{fg=white}
  \setbeamercolor*{frametitle}{fg=white}
  \@nameuse{ps@navigation}}
\addtobeamertemplate{section page}{\thispagestyle{navigation@sectionpage}}{}

\setbeamertemplate{itemize items}{--}
\setbeamersize{text margin left=0.32cm,text margin right=0.32cm}

