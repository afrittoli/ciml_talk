\mode<presentation>

% My Color Palette
\definecolor{myblack}{RGB}{0,0,0}
\definecolor{myblue}{RGB}{15,111,255}
\definecolor{myteal}{RGB}{255,255,255}
\definecolor{mygray}{RGB}{0.5,0.5,0.5}
\definecolor{mylightgray}{RGB}{234,234,234}
\definecolor{mydarkblue}{RGB}{0,54,135}
\definecolor{mydarkteal}{RGB}{16,106,105}
\definecolor{sectiondarkblue}{RGB}{2,31,68}
\definecolor{sectionlightblue}{RGB}{57,122,185}
\definecolor{conference}{RGB}{33,31,33}
\definecolor{conferencelight}{RGB}{255,255,255}


% Colors
% Title slide
\setbeamercolor*{title page header}{fg=conference}
\setbeamercolor*{author}{fg=conference}
\setbeamercolor*{date}{fg=conference}
\setbeamercolor*{footline}{fg=myblack}

% Regular slide
\setbeamercolor*{background canvas}{bg=white}
\setbeamercolor*{frametitle}{fg=black}
\setbeamercolor*{itemize item}{fg=black}

% Hyperlinks colours
\hypersetup{colorlinks,linkcolor=myteal,urlcolor=mydarkblue}

% Fonts
\setsansfont{IBMPlexSans}
\setmonofont{IBMPlexMono}
\setbeamerfont{title}{size=\fontsize{14}{14}\selectfont}
\setbeamerfont{author}{size=\fontsize{8}{8}\selectfont}
\setbeamerfont{caption}{size=\scriptsize}

\mode
<all>
